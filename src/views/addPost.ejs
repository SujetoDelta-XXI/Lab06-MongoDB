<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Crear Post</title>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body class="container" style="margin-top: 30px;">
  <h3 class="teal-text center-align">Crear Nuevo Post</h3>

  <form action="/posts/add" method="POST">

    <!-- Selección del autor -->
    <div class="input-field">
      <select name="userId" required>
        <option value="" disabled selected>Selecciona el autor</option>
        <% users.forEach(user => { %>
          <option value="<%= user._id %>">
            <%= user.name %> <%= user.lastName %>
          </option>
        <% }) %>
      </select>
      <label>Autor del Post</label>
    </div>

    <!-- Título -->
    <div class="input-field">
      <input type="text" name="title" required minlength="5" maxlength="30">
      <label for="title">Título</label>
    </div>

    <!-- Contenido -->
    <div class="input-field">
      <textarea name="content" class="materialize-textarea" required minlength="10"></textarea>
      <label for="content">Contenido</label>
    </div>

    <!-- Hashtags -->
    <div class="input-field">
      <input type="text" name="hashtags" placeholder="Ejemplo: #node,#mongodb">
      <label for="hashtags" class="active">Hashtags</label>
    </div>

    <!-- Imagen -->
    <div class="input-field">
      <input type="text" name="imageUrl" placeholder="URL de la imagen">
      <label for="imageUrl" class="active">URL de la Imagen</label>
    </div>

    <button type="submit" class="btn waves-effect waves-light teal">
      <i class="material-icons left">add</i> Crear Post
    </button>
  </form>

  <!-- Materialize JS -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  <script>
    // Inicializa el componente select de Materialize
    document.addEventListener('DOMContentLoaded', function() {
      const elems = document.querySelectorAll('select');
      M.FormSelect.init(elems);
    });
  </script>
</body>
</html>
